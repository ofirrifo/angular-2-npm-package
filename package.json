{
  "name": "ng-2-npm-package",
  "version": "1.0.0",
  "description": "A starter project to create angular 2 npm package",
  "main": "index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "gulp build && npm run tsc",
    "postbuild":"rimraf tmp",
    "tsc": "tsc --rootDir tmp --outDir dist --declaration",
    "server": "webpack-dev-server --inline --progress --port 3000 --content-base src --open",
    "start": "npm run server"
  },
  "keywords": [
    "Anfular 2",
    "Anfular",
    "Anfular npm package",
    "Webpack 2",
    "Typescript 2",
    "RxJS 5"
  ],
  "author": "Ofir Fridman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ofirrifo/angular-2-npm-package"
  },
  "dependencies": {},
  "devDependencies": {
    "@angular/common": "~2.4.9",
    "@angular/compiler ": "~2.4.9",
    "@angular/core": "~2.4.9",
    "@angular/platform-browser": "~2.4.9",
    "@angular/platform-browser-dynamic": "~2.4.9",
    "@types/node": "^7.0.5",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^6.7.5",
    "awesome-typescript-loader": "^3.0.7",
    "codelyzer": "^3.0.0-beta.0",
    "core-js": "~2.4.1",
    "css-loader": "^0.26.1",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-clean-css": "^3.0.3",
    "gulp-inline-ng2-template": "^4.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "ie-shim": "~0.1.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.2",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "run-sequence": "^1.2.2",
    "rxjs": "~5.2.0",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.1",
    "to-string-loader": "^1.1.5",
    "tslint": "^4.4.2",
