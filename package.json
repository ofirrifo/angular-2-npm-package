{
  "name": "ng-2-npm-package",
  "version": "1.0.0",
  "description": "A starter project to create angular 2 npm package",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --rootDir ./npm-modules --outDir dist",
    "server": "webpack-dev-server --inline --progress --port 3000 --content-base src --open",
    "start": "npm run server"
  },
  "keywords": [
    "Anfular 2",
    "Anfular",
    "Anfular npm package",
    "Webpack 2",
    "Typescript 2",
    "RxJS 5"
  ],
  "author": "Ofir Fridman",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "~2.4.8",
    "@angular/compiler ": "~2.4.8",
    "@angular/core": "~2.4.8",
    "@angular/platform-browser": "~2.4.8",
    "@angular/platform-browser-dynamic": "~2.4.8",
    "core-js": "~2.4.1",
    "ie-shim": "~0.1.0",
    "rxjs": "~5.2.0",
    "zone.js": "~0.7.7"
  },
  "devDependencies": {
    "@types/node": "^7.0.5",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^6.7.5",
    "awesome-typescript-loader": "^3.0.7",
    "css-loader": "^0.26.1",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.2",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.1",
    "to-string-loader": "^1.1.5",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0"
  }
}
